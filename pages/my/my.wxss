.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info-top{
  padding: 40rpx 0 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--theme);
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.info-middle{
  height: 0;
  position: relative;
  top: -20rpx;
}

.vip-info{
  padding: 30rpx 120rpx;
  background: #BAC6CF;
  color: var(--theme);
  border-radius: 16rpx;
}

.info-bottom{
  width: 100%;
  margin-top: 80rpx;
}
.login-title{
  color: #fff;
  margin-bottom: 50rpx;
}
.login-button{
  border-radius: 100rpx;
  margin-bottom: 50rpx;
}
.refuse-button{
  color: #fff;
  border-radius: 100rpx;
  padding: 25rpx 140rpx;
  border: 1px solid #fff;
}