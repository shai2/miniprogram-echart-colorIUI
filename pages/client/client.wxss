/* pages/component/nav/nav.wxss */
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
  background-color: #fff;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox, .SearchBox{
  display: flex;
  position: fixed;
  width: 100%;
  top: 55px;
  z-index: 1024;
}
.VerticalMain{
  background-color: #f1f1f1;
}
.search-btn-wrapper{
  width: 130rpx;
}
.search-btn{
  background-color: var(--theme)!important;
  color: #fff;
}
.customListTip{
  padding-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.customListTip text{
  margin-bottom: 50rpx;
}